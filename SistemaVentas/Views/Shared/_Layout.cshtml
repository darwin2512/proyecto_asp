<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="~/Content/production/images/favicon.ico" type="image/ico" />

    <title>Helados Buenos</title>

    @Styles.Render("~/Template/css")
    <style>
        .dl-horizontal {
            display: inline-block;
        }
    </style>
</head>

<body class="nav-md">

    <div class="container body">
        <div class="main_container">
            <div class="col-md-3 left_col">
                <div class="left_col scroll-view">
                    <div class="navbar nav_title" style="border: 0;">
                        <a href="@Url.Action("Index","Home")" class="site_title"><i class="fa fa-paw"></i> <span>Helados Buenos</span></a>
                    </div>

                    <div class="clearfix"></div>

                    <!-- menu profile quick info -->
                    <div class="profile clearfix">
                        <div class="profile_pic">
                            <img src="~/Content/production/images/img.jpg" alt="..." class="img-circle profile_img">
                        </div>

                        <div class="profile_info">
                            <span>Bienvenido,</span>
                            <h2>admin</h2>
                        </div>
                    </div>
                    <!-- /menu profile quick info -->

                    <br />

                    <!-- sidebar menu -->
                    <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
                        <div class="menu_section">
                            <h3>General</h3>
                            <ul class="nav side-menu">
                                <li>
                                    <a><i class="fa fa-edit"></i> Productos<span class="fa fa-chevron-down"></span></a>
                                    <ul class="nav child_menu">
                                        <li><a href="@Url.Action("Index","Tabla")">Gestionar productos</a></li>
                                    </ul>
                                </li>
                                <li>
                                    <a><i class="fa fa-shopping-cart"></i> Transacciones <span class="fa fa-chevron-down"></span></a>
                                    <ul class="nav child_menu">

                                        <li><a href="@Url.Action("Index","Venta")">Punto de venta</a></li>

                                    </ul>
                                </li>

                                <li>
                                    <a><i class="fa fa-bar-chart-o"></i> Reportes <span class="fa fa-chevron-down"></span></a>
                                    <ul class="nav child_menu">
                                        <li><a href="@Url.Action("ReporteVentaDiario","Reportes")">Reporte diarios</a></li>
                                        <li><a href="@Url.Action("ReporteVentaSemana","Reportes")">Reporte Semanales</a></li>
                                        <li><a href="@Url.Action("ReporteVentaMes","Reportes")">Reporte Mensuales</a></li>
                                    </ul>
                                </li>

                                <li>
                                    <a><i class="fa fa-table"></i> Configuración <span class="fa fa-chevron-down"></span></a>
                                    <ul class="nav child_menu">
                                        <li><a href="@Url.Action("ListaUsuario","Usuario")">Gestionar Usuarios</a></li>
                                    </ul>
                                </li>

                            </ul>
                        </div>

                    </div>
                    <!-- /sidebar menu -->
                    <!-- /menu footer buttons -->
                    <div class="sidebar-footer hidden-small">
                        <a data-toggle="tooltip" data-placement="top" title="Logout" href="@Url.Action("logoOff","Cerrar")">
                            <span class="glyphicon glyphicon-off" aria-hidden="true"></span>
                        </a>
                    </div>
                    <!-- /menu footer buttons -->


                </div>
            </div>

            <!-- top navigation -->
            <div class="top_nav">
                <div class="nav_menu">
                    <nav>
                        <div class="nav toggle">
                            <a id="menu_toggle"><i class="fa fa-bars"></i></a>
                        </div>

                        <ul class="nav navbar-nav navbar-right">
                            <!--Dropdown User-->
                            <li class="">
                                <a href="javascript:;" class="user-profile dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                    <img src="~/Content/production/images/img.jpg" alt="">
                                    <label>admin</label>
                                    <span class=" fa fa-angle-down"></span>
                                </a>
                                <ul class="dropdown-menu dropdown-usermenu pull-right">
                                    <li><a href="@Url.Action("logoOff","Cerrar")"><i class="fa fa-sign-out pull-right"></i> Cerrar sesión</a></li>
                                </ul>
                            </li>
                            <!--Dropdown User-->

                        </ul>
                    </nav>
                </div>
            </div>
            <!-- /top navigation -->
            <!-- page content -->
            <div class="right_col" role="main">

                @RenderBody()

            </div>
            <!-- /page content -->
            <!-- footer content -->
            <footer>
                <div class="pull-right">
                    Copyright © 2019 Todos los derechos reservados.</a>
                </div>
                <div class="clearfix"></div>
            </footer>
            <!-- /footer content -->
        </div>

    </div>
    @Scripts.Render("~/Content/js")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Template/js")
    @RenderSection("styles", required: false)
    @RenderSection("scripts", required: false)

</body>
</html>