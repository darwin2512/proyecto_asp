@model List<SistemaVentas.Models.UsuarioModels.ListTablaUsuarioModel>
@{
    ViewBag.Title = "Lista de Usuarios";
}

<h2>@ViewBag.Title</h2>


<div class="row" style="text-align: right; padding: 5px;">
    <a href="../Usuario/NuevoUsuario" class="btn btn-danger"><i class="fa fa-user"></i> Nuevo</a>
</div>


<div class="row">
    <div class="col-md-12">
        <table class="table table-responsive">
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Correo</th>
                <th>Contraseña</th>
                <th>Rol</th>
                <th>Accion</th>
            </tr>
           
            @foreach (var elemento in Model)
            {
                <tr>
                    <td>@elemento.Id</td>
                    <td>@elemento.Nombre</td>
                    <td>@elemento.Email</td>
                    <td>@elemento.Pass</td>
                    <td>@elemento.Id_rol</td>
                    <td>
                        <a class="btn btn-danger" href="~/Usuario/EliminarUsuario/@elemento.Id">Eliminar</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
