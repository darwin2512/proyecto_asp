@model List<SistemaVentas.Models.ProductoModels.ListTablaProductoModel>
@{
    ViewBag.Title = "Gestion de productos";
}

<h2>@ViewBag.Title</h2>

@* System.NullReferenceException *@

<div class="row" style="text-align: right; padding: 5px;">
    <a href="../Tabla/Nuevo" class="btn btn-danger">Nuevo</a>
</div>


<div class="row">
    <div class="col-md-12">
        <table class="table table-responsive">
            <tr>
                <th>Id</th>
                <th>Codigo</th>
                <th>Nombre</th>
                <th>Costo</th>
                <th>Precio</th>
                <th>Existencia</th>
                <th>Fecha</th>
                <th></th>
            </tr>

            @foreach (var elemento in Model)
            {
                <tr>
                    <td>@elemento.Id</td>
                    <td>@elemento.Codigo</td>
                    <td>@elemento.Nombre</td>
                    <td>@elemento.Costo</td>
                    <td>@elemento.Precio</td>
                    <td>@elemento.Existencia</td>
                    <td>@elemento.Fecha</td>
                    <td>
                        <a class="btn btn-default" href="~/Tabla/Editar/@elemento.Id">Editar</a>
                        <a class="btn btn-danger" href="~/Tabla/Eliminar/@elemento.Id">Eliminar</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
